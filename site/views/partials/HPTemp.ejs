<%- include('HPHead') %>
<%- include('navbar') %>

<body>
    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-row">
            <h2><%= heroTitle %></h2>
            <p><%= heroSubtitle %></p>
        </div>
        <div class="access">
            <a href="<%= heroButtonLink %>" class="acc-btn"><%= heroButtonText %></a>
        </div>
    </section>

    <!-- Overview of Topics -->
    <section class="topics" id="topics">
        <h1><%= topicsHeading %></h1>
        <div class="topics-row">
            <% topics.forEach(topic => { %>
                <div class="topic">
                    <i class="<%= topic.icon %> fa-3x"></i>
                    <h3><%= topic.title %></h3>
                    <p><%= topic.description %></p>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="RS">
        <div class="cta">
            <% callsToAction.forEach(cta => { %>
                <div class="cta-box">
                    <h4><%= cta.title %></h4>
                    <a href="<%= cta.link %>" class="download-btn"><%= cta.buttonText %></a>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Why We Started -->
    <section class="WWS">
        <div class="WWS-img">
            <img src="<%= founderImage %>">
        </div>
        <div class="WWS-txt">
            <h1><%= whyWeStartedHeading %></h1>
            <p><%= whyWeStartedText1 %></p>
            <p><%= whyWeStartedText2 %></p>
        </div>
    </section>

    <!-- Impact -->
    <section class="Impact">
        <h1><%= impactHeading %></h1>
        <h3><%= impactSubheading %></h3>
        <div class="Imp-row">
            <% impactReviews.forEach(review => { %>
                <div class="Imp">
                    <p><%= review %></p>
                </div>
            <% }) %>
        </div>
    </section>

    <!-- Tutoring -->
    <section class="tutor">
        <div class="tutor-txt">
            <h1><%= tutoringHeading %></h1>
            <p><%= tutoringText1 %></p>
            <p><%= tutoringText2 %></p>
        </div>
        <div class="tutor-img">
            <img src="<%= tutorImage %>">
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="progress-tracker">
            <h4><%= footerText %></h4>
            <a href="<%= footerButtonLink %>" class="moti-btn"><%= footerButtonText %></a>
        </div>
    </footer>
</body>
</html>